<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Details</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f4f4f4;
            color: #333;
        }

        h1, h2 {
            color: #333;
            margin-bottom: 20px;
        }

        .book-details {
            background-color: #fff;
            border: 1px solid #ddd;
            margin-bottom: 10px;
            margin-top: 10px;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .details-container {
            display: flex;
            flex-wrap: wrap;
            margin-top: 15px;
        }

        .detail-item {
            flex: 1 1 200px;
            margin-right: 15px;
            margin-bottom: 15px;
        }

        .label {
            font-weight: bold;
            color: #555;
        }

        .value {
            color: #333;
        }

        .grid {
            display: grid;
            margin-top: 20px;
            background-color: #fff;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .gridItem {
            padding: 15px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        .gridItem strong {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <%- include('../includes/adminNavigationBar.ejs') %>
    <div class="book-details">
        <h2>Book Details</h2>
        <div class="details-container">
            <div class="detail-item">
                <span class="label">Title:</span>
                <span class="value"><%= book.details.title %></span>
            </div>
            <div class="detail-item">
                <span class="label">Author:</span>
                <span class="value"><%= book.details.author %></span>
            </div>
            <div class="detail-item">
                <span class="label">Subject:</span>
                <span class="value"><%= book.details.subject %></span>
            </div>
            <div class="detail-item">
                <span class="label">ISBN:</span>
                <span class="value"><%= book.details.ISBN %></span>
            </div>
            <div class="detail-item">
                <span class="label">Book ID:</span>
                <span class="value"><%= book.bookID %></span>
            </div>
            <div class="detail-item">
                <span class="label">Availability:</span>
                <span class="value"><%= book.availability ? 'Available' : 'Not Available' %></span>
            </div>
        </div>
    </div>

    <% if (!book.issueHistory.length) { %>
        <div class="book-details">
            <h2>No past Issues</h2>
        </div>
    <% } else { %>
        <div class="grid" style="grid-template-columns: repeat(3 , 1fr);">
            <div class="gridItem" style="border-color: #333;"><strong>User</strong></div>
            <div class="gridItem" style="border-color: #333;"><strong>Issue Date</strong></div>
            <div class="gridItem" style="border-color: #333;"><strong>Date of Return</strong></div>
            <% book.issueHistory.forEach(issue => { %>
                <div class="gridItem"><%= issue.userID.details.username %></div>
                <div class="gridItem"><%= formatDate(issue.issueDate) %></div>
                <div class="gridItem"><%= issue.dateofReturn ? formatDate(issue.dateofReturn) : 'Pending' %></div>
            <% }); %>
        </div>
    <% } %>

    <% function formatDate(date) { %>
        <% if (date) { %>
            <% const options = { weekday: 'long', year: 'numeric', month: 'numeric', day: 'numeric' }; %>
            <% const formatter = new Intl.DateTimeFormat('en-US', options); %>
            <% return formatter.format(date); %>
        <% } else { %>
            <%= 'N/A' %>
        <% } %>
    <% } %>
</body>
</html>
