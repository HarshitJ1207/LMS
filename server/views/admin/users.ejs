<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f4f4f4;
        }

        h1, h2 {
            color: #333;
            margin-bottom: 20px;
        }

        .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 10px 0;
            background-color: #fff;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .button-container button, .search-button {
            padding: 10px;
            background-color: #1fa8b6;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

        .button-container button:hover, .search-button:hover {
            padding: 12px;
        }

        .search-bar {
            display: flex;
            align-items: center;
            margin-left: auto;
        }

        .search-bar select,
        .search-bar input {
            margin-right: 10px;
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .search-bar input {
            color: #333;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            margin-top: 20px;
            background-color: #fff;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .gridItem {
            padding: 15px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        .gridItem a {
            text-decoration: none;
            color: #333;
        }

        .gridItem strong {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <%- include('../includes/adminNavigationBar.ejs') %>
    <div class="container">
        <div class="button-container">
            <button>
                <a href="/admin/addUser" style="text-decoration: none; color: #fff;">Add User</a>
            </button>
        </div>
        <div class="search-bar">
            <form action="/admin/users/" method="get">
                <select name="searchType">
                    <option value="username">Username</option>
                    <option value="email">Email</option>
                    <option value="contactNumber">Contact Number</option>
                </select>
                <select name="userType">
                    <option value="any">Any</option>
                    <option value="Faculty">Faculty</option>
                    <option value="guestFaculty">Visiting / Guest Faculty</option>
                    <option value="permanentStaff">Staff (Permanent)</option>
                    <option value="contractualStaff">Staff (Contractual)</option>
                    <option value="researchScholars">Research Scholars/Ph.D</option>
                    <option value="PG">Student (PG)</option>
                    <option value="UG">Student (UG)</option>
                    <option value="YLL">Young Learner Library (YLL)</option>
                    <option value="admin">Admin</option>
                </select>
                <input placeholder="Search" name="searchValue">
                <button class="search-button" type="submit">Search</button>
            </form>
        </div>
    </div>

    <% if (userList.length > 0) { %>
        <div class="grid" style="grid-template-columns: repeat(3, 1fr);">
            <div class="gridItem"><strong>Username</strong></div>
            <div class="gridItem"><strong>Email</strong></div>
            <div class="gridItem"><strong>User Type</strong></div>

            <% userList.forEach(user => { %>
                <div class="gridItem">
                    <a href="/admin/users/<%= user.details.username %>" class="defaultAnchor">
                        <em><%= user.details.username %></em>
                    </a>
                </div>
                <div class="gridItem"><%= user.details.email %></div>
                <div class="gridItem"><%= user.details.userType %></div>
            <% }); %>
        </div>
    <% } %>
</body>

</html>
