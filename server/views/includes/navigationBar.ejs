<style>
    .navigationBar {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        height: 40px;
        width: 100%;
        background-color: #1fa8b6;
        border: 2px solid #147079;
    }

    .leftNavigationLinks {
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }

    .rightNavigationLinks {
        justify-content: flex-end;
        display: flex;
        align-items: center;
    }

    .navigationAnchor{
        margin: 0px 10px;
        text-decoration: none;
        color: #0a383c;
        font-size: large;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

    .navigationAnchor:hover{
        text-decoration: underline; 
        font-size: larger; 
    } 
    .flash-div{
        color: green;
        background-color: rgba(76, 205, 50, 0.199);
        width: 100%;
        padding: 1px;
        font-size: larger;
        text-align: center;
        margin-bottom: 10px;
    }

</style>


<nav class = "navigationBar">
    <div class="leftNavigationLinks">
        <a href = "/" class = "navigationAnchor">Home</a>
        <a href = "/books" class = "navigationAnchor">Books</a>
        <a href = "/studio" class = "navigationAnchor">Studio</a>
        <%if(loggedIn){%>
            <a href = "/me" class = "navigationAnchor">My Profile</a>
        <%}%>
    </div>
    <div class="rightNavigationLinks">
        <%if(loggedIn) {%>
            <a href = "/logout" class = "navigationAnchor">Logout</a>
        <%} else {%>
            <a href="/login" class = "navigationAnchor">Login</a>
        <%}%>
    </div>
</nav>
<% if(flashMsg){ %>
    <div class = "flash-div" id = "flash-div">
        <%=flashMsg%>
    </div>
<%}%>

<script>
    setTimeout(() => {
        let element = document.getElementById("flash-div");
        if(element) element.remove();
    }, 5000)
</script>