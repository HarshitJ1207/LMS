<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book List</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f4f4f4;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 10px 0;
            background-color: #fff;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .button-container{
            margin-top: 5px;
            text-align: center;
        }
        .button-container a{
            text-decoration: none;
            color: #fff;
        }

        .button-container button, .search-button {
            padding: 10px;
            background-color: #1fa8b6;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }
        
        .button-container button:hover, .search-button:hover {
            padding: 12px;
        }

        .search-bar {
            display: flex;
            align-items: center;
        }

        .search-bar select,
        .search-bar input {
            margin-right: 10px;
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .search-bar input {
            color: #333;
        }


        .grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            margin-top: 20px;
            background-color: #fff;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .gridItem {
            padding: 15px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        .gridItem a {
            text-decoration: none;
            color: #333;
        }

        .gridItem strong {
            font-weight: bold;
        }

        .paginationButton{
            padding: 8px;
            background-color: #1fa8b6;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }
        .paginationButton:hover{
            padding: 12px;
        }
    </style>
</head>

<body>
    <%- include('../includes/navigationBar.ejs') %>
    <div class="container">
        <div class="search-bar">
            <form action="/books" method="get">
                <select name="searchType">
                    <option value="title">Title</option>
                    <option value="author">Author</option>
                    <option value="ISBN">ISBN</option>
                </select>
                <input placeholder="Subject" name="subject">
                <input placeholder="Search" name="searchValue">
                <button class="search-button" type="submit">Search</button>
            </form>
        </div>
    </div>
    <% if (bookList.length === 0) { %>
        <h1>No Books</h1>
    <% } else { %>
        <div class="grid">
            <div class="gridItem"><strong>Book ID</strong></div>
            <div class="gridItem"><strong>Title</strong></div>
            <div class="gridItem"><strong>Author</strong></div>
            <div class="gridItem"><strong>subject</strong></div>
            <div class="gridItem"><strong>Availability</strong></div>
            <% bookList.forEach(book => { %>
                <div class="gridItem"><%= book.bookID %></div>
                <div class="gridItem"><a href="/books?searchType=title&subject=&searchValue=<%=encodeURIComponent(book.details.title)%>"><%= book.details.title %></a></div>
                <div class="gridItem"><a href="/books?searchType=author&subject=&searchValue=<%=encodeURIComponent(book.details.author)%>"><%= book.details.author %></a></div>
                <div class="gridItem"><a href="/books?searchType=title&subject=<%= encodeURIComponent(book.details.subject) %>&searchValue="><%= book.details.subject %></a></div>
                <div class="gridItem"><%= book.availability ? 'Available' : 'Unavailable' %></div>
            <% }); %>
        </div>
        <div style = "text-align: center; height: auto; margin-top: 20px;">
            <%
                let set = new Set();
                set.add(1);
                set.add(lastPage);
                set.add(page);
                if (page !== lastPage) set.add(page + 1);
                if (page !== 1) set.add(page - 1);
            
                // Convert the Set to an array and sort it
                let arr = Array.from(set).sort((a, b) => a - b);
            
                arr.forEach(i => { %>
                    <a class = "paginationButton" href='/books?searchType=<%=searchType%>&subject=<%=encodeURIComponent(subject)%>&searchValue=<%=encodeURIComponent(searchValue)%>&page=<%=i%>'><%=i%></a>
                <% }) %>
            %>
        </div>
    <% } %>
</body>

</html>
