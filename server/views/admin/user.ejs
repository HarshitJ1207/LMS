<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f4f4f4;
            color: #333;
        }

        h1, h2 {
            color: #333;
            margin-bottom: 20px;
        }

        .user-details {
            background-color: #fff;
            border: 1px solid #ddd;
            margin-bottom: 10px;
            margin-top: 10px;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .user-info {
            display: flex;
            flex-wrap: wrap;
            margin-top: 15px;
        }

        .info-item {
            flex: 1 1 200px;
            margin-right: 15px;
            margin-bottom: 15px;
        }

        .label {
            font-weight: bold;
            color: #555;
        }

        .value {
            color: #333;
        }

        .grid {
            display: grid;
            margin-top: 20px;
            background-color: #fff;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .gridItem {
            padding: 15px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        .gridItem strong {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <%- include('../includes/adminNavigationBar.ejs') %>
    <div class="user-details">
        <h2>User Details</h2>
        <div class="user-info">
            <div class="info-item">
                <span class="label">Username:</span>
                <span class="value"><%= user.details.username %></span>
            </div>
            <div class="info-item">
                <span class="label">Email:</span>
                <span class="value"><%= user.details.email %></span>
            </div>
            <div class="info-item">
                <span class="label">Contact Number:</span>
                <span class="value"><%= user.details.contactNumber %></span>
            </div>
            <div class="info-item">
                <span class="label">User Type:</span>
                <span class="value"><%= user.details.userType %></span>
            </div>
        </div>
    </div>

    <div class="user-details">
        <h2>User Issue Privilege</h2>
        <div class="user-info">
            <div class="info-item">
                <span class="label">Max Books:</span>
                <span class="value"><%= user.bookIssuePrivilege.maxBooks %></span>
            </div>
            <div class="info-item">
                <span class="label">Issue Duration:</span>
                <span class="value"><%= user.bookIssuePrivilege.issueDuration %> days</span>
            </div>
        </div>
    </div>

    <% if (!user.issueHistory.length) { %>
        <div class="user-details">
            <h2>No Past Issues</h2>
        </div>
    <% } else { %>
        <div class="user-details">
        <h2>Past Issues</h2>
            <div class="book-list grid" style="grid-template-columns: repeat(4, 1fr);">
                <div class="gridItem"><strong>Title</strong></div>
                <div class="gridItem"><strong>BookID</strong></div>
                <div class="gridItem"><strong>Issue Date</strong></div>
                <div class="gridItem"><strong>Date of Return</strong></div>
                <% user.issueHistory.forEach(issue => { %>
                    <div class="gridItem"><%= issue.bookID.details.title %></div>
                    <div class="gridItem"><%= issue.bookID.bookID %></div>
                    <div class="gridItem"><%= formatDate(issue.issueDate) %></div>
                    <div class="gridItem"><%= formatDate(issue.dateofReturn) %></div>
                <% }); %>
            </div>
        </div>
    <% } %>

    <% if (!user.currentIssues.length) { %>
        <div class="user-details">
            <h2>No Current Issues</h2>
        </div>
    <% } else { %>
        <div class="user-details">
            <h2>Current Issues</h2>
            <div class="grid" style="grid-template-columns: repeat(3, 1fr);">
                <div class="gridItem"><strong>Title</strong></div>
                <div class="gridItem"><strong>BookID</strong></div>
                <div class="gridItem"><strong>Issue Date</strong></div>
                <% user.currentIssues.forEach(issue => { %>
                    <div class="gridItem"><%= issue.bookID.details.title %></div>
                    <div class="gridItem"><%= issue.bookID.bookID %></div>
                    <div class="gridItem"><%= formatDate(issue.issueDate) %></div>
                <% }); %>
            </div>
        </div>
    <% } %>

    <% function formatDate(date) { %>
        <% const options = { weekday: 'long', year: 'numeric', month: 'numeric', day: 'numeric' }; %>
        <% const formatter = new Intl.DateTimeFormat('en-US', options); %>
        <% if (date) { %>
            <%= formatter.format(date) %>
        <% } else { %>
            <%= 'N/A' %>
        <% } %>
    <% } %>
</body>

</html>
